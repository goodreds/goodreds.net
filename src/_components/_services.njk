    <div id="carousel">
      <div class="bg-sky-50 h-1/5 flex flex-col justify-center items-center">
        <div class="max-w-4xl mx-auto mb-12 relative">
          <!-- <div x-data="{ activeSlide: 1, slides: [1,2,3,4,5,6,7,8,9] }"> -->
          <div x-data="{ activeSlide: 'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_anatomy.png', slides: [
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_anatomy.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_spacing.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_font_size.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_shadows.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_order_cta.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_corner_radius.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_states.png',
            'https://res.cloudinary.com/goodreds/image/upload/v1644556290/goodreds.net/buttons_carousel/3d_order.png'
            ]}">
            <!-- Slides -->
            <template x-for="(slide, index) in slides" :key="index">
              <div x-show="activeSlide === slide" class="font-bold text-5xl h-auto flex items-center bg-sky-500 text-white rounded-lg">
                <img class="max-w-full" x-bind:src="slide" alt=""/>
                <!-- <span class="w-12 text-center" x-text="slide"></span>
                <span class="text-sky-300">/</span>
                <span class="w-12 text-center" x-text="slides.length"></span> -->
              </div>
            </template>

            <!-- Prev/Next Arrows -->
            <div class="absolute inset-0 flex">
            <div class="flex items-center justify-start w-1/2">
                <button
                class="bg-sky-100 text-sky-500 hover:text-orange-500 font-bold hover:shadow-lg rounded-full w-12 h-12 -ml-6"
                x-on:click="activeSlide = activeSlide === 1 ? slides.length : activeSlide - 1">
                &#8592;
                </button>
            </div>
            <div class="flex items-center justify-end w-1/2">
                <button
                class="bg-sky-100 text-sky-500 hover:text-orange-500 font-bold hover:shadow rounded-full w-12 h-12 -mr-6"
                x-on:click="activeSlide = activeSlide === slides.length ? 1 : activeSlide + 1">
                &#8594;
                </button>
            </div>
            </div>

            <!-- Buttons -->
            <div class="absolute w-full flex items-center justify-center px-4">
              <template x-for="(slide, index) in slides" :key="index">
                  <button
                  class="flex-1 w-4 h-2 mt-4 mx-2 mb-0 rounded-full overflow-hidden transition-colors duration-200 ease-out hover:bg-sky-600 hover:shadow-lg"
                  :class="{
                      'bg-orange-600': activeSlide === slide,
                      'bg-sky-300': activeSlide !== slide
                  }"
                  x-on:click="activeSlide = slide"
                  ></button>
              </template>
            </div>
          </div>
        </div>
      </div>
