<!-- The data for elevatorPitch is stored in data.json. -->
<section
  id="elevatorPitch"
  class="pb-12 md:pb-12 bg-stone-50 dark:bg-stone-900"
>
  <div class="px-5 max-w-screen-xl lg:mx-auto">
    <div
      class="py-10 grid gap-x-6 gap-y-5 sm:gap-y-2 grid-cols-1 md:grid-cols-3 md:grid-flow-row-dense"
    >
      <div class="md:col-span-3 mb-16">
        <!-- <h3 class="text-rose-700 mb-10 text-sm font-bold tracking-widest uppercase dark:text-gray-400">{{ data.elevatorPitchTitle }}</h3> -->
        <span
          class="block text-2xl tracking-tight text-gray-700 dark:text-gray-300 mb-10 md:w-2/3"
        >
          {{ data.elevatorPitchDescription }}
        </span>
        <!-- <button class="buttonDefaults buttonPrimary" href="#">Primary</button> -->
        <!-- <button class="buttonDefaults buttonSecondary">Secondary</button> -->
        <!-- <button class="buttonDefaults buttonSecondaryAlt">SecondaryAlt</button> -->
        <!-- <button class="buttonDefaults buttonDisabled">Disabled</button> -->
        <!-- <button class="buttonDefaults buttonWarning">Warning</button> -->
        <!-- <button class="buttonDefaults buttonError">Error</button> -->
        <!-- <button class="buttonDefaults buttonSuccess">Success</button> -->
        <div class="flex">
          <button class="buttonDefaults w-1/3 buttonTertiary transition">
            Tertiary
          </button>
          <button
            class="buttonDefaults w-1/3 buttonCTA"
          >
            Call To Action &rarr;
          </button>
        </div>
      </div>

      {% for item in collections.examples | reverse%}
      <!-- if featured:true in the markdown file for the subject, it will be shown here in a 3-column grid -->
      {% if item.data.featured %}
      <a
        href="{{ item.url }}"
        title="Find out more about {{ item.data.title }}"
        class="flex flex-col justify-between post relative md:transform md:hover:-translate-y-2 md:transition-transform rounded-md overflow-hidden shadow-md"
      >
        <article
          class="border-opacity-50 border-gray-300 border bg-{{
            item.data.tailwindAccentColour
          }}-700 bg-gradient-to-br from-{{
            item.data.tailwindAccentColour
          }}-200 to-{{ item.data.tailwindAccentColour }}-300"
        >
          <header class="p-4 lg:p-8 pt-6 lg:pt-10 h-60 sm:h-60 md:h-60 relative">
            <span
              class="text-gray-800 mix-blend-color-burn text-5xl tracking-tighter font-bold block"
              >{{ item.data.title }}</span
            >
            <!-- FIXME Change the item.data.tasks to something more meaningful. It's currently being used as a rudimentary tag -->
            <!-- TODO Does this need to be able to handle multiple tags? And should the tag itself link to a page of filtered results for that particular tag? -->
            <span
              class="text-stone-600 bg-stone-200 tracking-wider rounded-md right-2 px-4 py-1  mb-4 text-xs block bottom-2 right-4 lg:right-8 absolute text-base font-normal opacity-80 shadow-inner mix-blend-hard-light"
              >{{ item.data.tasks }}</span
            >
            <p class="text-sm text-stone-900 mix-blend-color-burn">
              {{ item.data.excerptText }}
            </p>
          </header>
          <picture class="block rounded-b-md overflow-hidden max-w-full relative">
            <button class="buttonDefaults buttonPrimary absolute bottom-8 ml-3 lg:ml-8 py-4 px-8">Read more</button>
            {% respimg item.data.featuredImg, item.data.title, "(min-width:
            48em) 48em, 100vw" %}
          </picture>
        </article>
      </a>
      {% endif %} {% endfor %}
    </div>
  </div>
</section>
