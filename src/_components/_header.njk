    <!-- Navigation -->
    <nav class="hidden md:block py-1">
      {% set navPages = collections.all | eleventyNavigation %}
      <ul class="text-right text-lg">
        {%- for entry in navPages %}
        <li class="inline-block mr-5">
          <a
            href="{{ entry.url | url }}"
            class="font-normal tracking-wide transition-colors dark:hover:text-yellow-400 hover:text-fuchsia-600
            {% if entry.url == page.url %}
                dark:text-yellow-200
                text-stone-900
              {% else %}
                dark:text-stone-200
                text-stone-700
            {% endif %}"
            >{{ entry.title }}</a
          >
        </li>
        {%- endfor %}
        <li class="inline-block">
          <a
            href="{{ metadata.author.mailtolink }}"
            title="get in touch"
            target="_blank"
            rel="noreferrer"
            class="text-gray-800 dark:bg-yellow-300 dark:text-yellow-600 py-2 px-5 rounded-full font-bold border-2 border-gray-900 dark:border-yellow-500 border-opacity-20 transition-colors hover:border-opacity-100"
            ><span>Contact</span>
          </a>
        </li>
      </ul>
